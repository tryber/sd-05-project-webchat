<!DOCTYPE html>
<html lang="pt-br">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"
    integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous" />
  <title>MongoChat</title>
  <style>
    #messageList {
      height: 300px;
    }
  </style>
</head>

<body>
  <div class="container">
    <div class="row">
      <div class="col-md-6 offset-md-3 col-sm-12">
        <h1 class="text-center">
          Chat da Uol
          <button id="clear" class="btn btn-danger">clear</button>
        </h1>
        <div id="status"></div>
        <div class="chat">
          <input data-testid="nickname-box" type="text" id="username" class="form-control" placeholder="Enter name...">
          <button data-testid="nickname-save" id="btn-save">Save</button>
          <br>
          <div class="card">

 

            <div id='messageList' class="card-block">
              <% if (allMessages) {%>
                  <% allMessages.forEach( ({ data, hora, nickname, chatMessage }) => { %>
                    <div><%= data %> <%= hora %> <%= nickname %> <%= chatMessage %></div>
                  <%})%>
                  <% } %>
            </div>


          </div>
          <br>
          <textarea data-testid="message-box" id="textarea" class="form-control"
            placeholder="Enter messsage..."></textarea>
          <button data-testid="send-button" id="btn-send">Enviar</button>
        </div>
      </div>
    </div>
  </div>

  <script defer src="/client.js"></script>
  <script src="http://localhost:3000/socket.io/socket.io.js"></script>
</body>

</html>